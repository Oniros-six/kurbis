---
import InfoBar from "../components/infoBar.astro";
import Navbar from "../components/navbar.astro";
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
    </head>
    <body>
        <main>
            <InfoBar
                message='Disfrutá nuestras exclusivas oportunidades! Visitá <a href="https://tienda.kurbis.com" class="underline hover:no-underline">tienda.kurbis.com</a>'
            />
            <Navbar />
            <slot />
        </main>
    </body>
</html>
