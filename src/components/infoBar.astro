---
interface Props {
    message?: string;
}

const { 
    message = ''
} = Astro.props;
---

<div class="w-full bg-gradient-to-r from-[#d35806] via-[#ffca68]  to-[#d35806] text-black py-3 relative z-50">
    <div class="max-w-7xl mx-auto px-4">
        <p class="text-xs sm:text-sm md:text-base text-center font-medium">
            <slot set:html={message}></slot>
        </p>
    </div>
</div>

