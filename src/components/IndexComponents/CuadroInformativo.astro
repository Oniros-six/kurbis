---
import ButtonBasic from "../ButtonBasic.astro";
const { imagen, alt, title, description } = Astro.props;
---

<div
    class="relative w-full h-screen flex items-center justify-center overflow-hidden"
>
    {/* Background Image */}
    <img
        src=`img/${imagen}?height=796&width=320`
        alt=`${alt}`
        class="absolute inset-0 w-full h-full object-cover"
    />

    {/* Optional Overlay for better text readability */}
    <div class="absolute inset-0 bg-black/30"></div>

    {/* Content Overlay */}
    <div
        class="relative z-10 flex flex-col items-center text-center max-w-4xl mx-auto px-4 sm:px-6 lg:px-8"
    >
        <h3
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 sm:mb-6 drop-shadow-lg"
        >
            {title}
        </h3>

        <p
            class="text-base sm:text-lg lg:text-xl text-white/90 mb-6 sm:mb-8 leading-relaxed max-w-2xl drop-shadow-md"
        >
            {description}
        </p>

        <ButtonBasic
            text="Comprar"
            hoverColor="--color-secundario"
            color="--color-pumpkin"
        />
    </div>
</div>
