---
const { title, description, image } = Astro.props;
---

<div
  class="bg-linear-to-t from-[var(--color-complementario)] to-[#f1e4b2] rounded-2xl p-4 flex flex-col items-center text-center mx-auto h-full border-2 border-[var(--color-primario)] hover:border-[var(--color-complementario)]"
>
  {/* Image Container with Reflection Effect */}
  <div class="mb-4 w-full flex justify-center mask-b-from-80% mask-b-to-100%">
    {/* Main Image */}
    <img
      src={image}
      alt={title}
      class="size-62 xs:size-88 sm:size-63 md:size-88 object-contain relative z-10"
      loading="lazy"
    />
  </div>

  {/* Content */}
  <div class="flex-1 flex flex-col justify-between w-full">
    <div class="mb-6 flex flex-col items-center max-w-xs">
      <h2
        class="text-2xl sm:text-3xl font-bold text-[var(--color-secundario)] mb-4 leading-tight font-serif"
      >
        {title}
      </h2>
      <p
        class="xs:max-w-[30rem] text-[var(--color-secundario)] font-medium text-sm sm:text-base leading-relaxed px-2"
      >
        {description}
      </p>
    </div>

    {/* Button */}
    <a href="/comprar">
      <button
        class=`w-fit self-center bg-[var(--color-secundario)] hover:bg-transparent hover:text-[var(--color-secundario)] hover:ring-2 ring-[var(--color-secundario)] text-white font-semibold
                     py-2 px-8 rounded-lg
                     shadow-md hover:shadow-lg`
      >
        Comprar
      </button>
    </a>
  </div>
</div>
