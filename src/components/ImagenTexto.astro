---
import Button from "@/components/Button";
import { ArrowRight } from "lucide-react";
const {
  srcBackground,
  altBackground,
  srcProduct,
  altProduct,
  title,
  description,
  buttonText,
  buttonLink,
  textButtonText,
  textButtonLink,
} = Astro.props;
---

<div class="relative w-full">
  {/* Background image - responsive height */}
  <img
    src={srcBackground}
    alt={altBackground}
    class="w-full object-cover h-[30rem] sm:h-[35rem] md:h-[45rem] lg:h-[55rem]"
  />

  {/* Content overlay - responsive layout */}
  <div class="absolute inset-0 flex items-center justify-end p-2 sm:p-4 md:p-6">
    <div class="w-full flex flex-col items-center justify-center">
      <h1
        class="text-nowrap font-bold text-xl md:text-3xl xl:text-4xl mb-2 sm:mb-3 md:mb-4 lg:mb-6"
      >
        {title}
      </h1>
      <div
        class="flex self-end min-[480px]:self-center sm:self-end min-[769px]:self-center lg:self-center items-center gap-6 sm:gap-8 md:gap-10 lg:gap-12 max-w-[15rem] xs:max-w-xs sm:max-w-lg md:max-w-xl lg:max-w-2xl"
      >
        {/* Product image - left side always */}
        <img
          src={srcProduct}
          alt={altProduct}
          class="absolute top-1/3 left-1/17 xs:left-1/13 md:top-1/5 xl:left-1/7 h-[23rem] xs:h-[30rem] md:h-[50rem] lg:h-[55rem] xl:h-[60rem] object-contain"
        />

        {/* Text content - right side */}
        <div class="text-black text-center justify-items-center xs:ml-8 xs:mr-3 mt-8">
          <p
            class="text-center xs:text-left text-xs sm:text-sm md:text-base lg:text-lg mb-4 sm:mb-6 lg:mb-8 leading-relaxed"
          >
            {description}
            <a
              href={textButtonLink}
              class="text-xs sm:text-sm md:text-base lg:text-lg font-medium hover:underline inline-block"
            >
              {textButtonText}
            </a>
          </p>

          {/* Button */}
          <Button
            className="flex hover:from-[var(--color-secundario)] hover:via-[var(--color-secundario)] hover:to-[var(--color-secundario)] hover:scale-105 transition-all duration-300 ease-in-out items-center group gap-2 text-sm sm:text-base mx-auto md:mx-0"
          >
            <a href={buttonLink}>{buttonText}</a>
            <ArrowRight className="w-3 h-3 sm:w-4 sm:h-4 stroke-3" />
          </Button>
        </div>
      </div>
    </div>
  </div>
</div>
