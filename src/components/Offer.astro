---
const {
    title,
    description,
    image
} = Astro.props
---

    <div class="bg-linear-to-t from-[var(--color-background-golden)] to-[#f1e4b2] rounded-2xl p-8 flex flex-col items-center text-center mx-auto h-full border-1 border-[var(--color-background-golden)] hover:border-[var(--kurbis-accent-orange)]">
      {/* Image Container with Reflection Effect */}
      <div class="mb-4 w-full flex justify-center">
          {/* Main Image */}
          <img
            src={image}
            alt={title}
            class="size-62 xs:size-88 sm:size-63 md:size-88 object-contain relative z-10"
          />
      </div>

      {/* Content */}
      <div class="flex-1 flex flex-col justify-between w-full">
        <div class="mb-6">
          <h2 class="text-2xl sm:text-3xl font-bold text-[var(--color-secundario)] mb-4 leading-tight">{title}</h2>
          <p class="text-[var(--color-secundario)] font-medium text-sm sm:text-base leading-relaxed px-2">{description}</p>
        </div>

        {/* Button */}
        <button
          class="w-fit self-center bg-[var(--color-secundario)] hover:bg-[#f29823] text-white font-semibold 
                     py-3 px-8 rounded-full transition-all duration-200 
                     transform hover:scale-105 active:scale-95
                     focus:outline-none focus:ring-2 focus:ring-[#4A5D3A] focus:ring-opacity-50
                     shadow-md hover:shadow-lg"
        >
          Comprar
        </button>
      </div>
    </div>
